        vm.etch(NBCoin,erc20ProvidedByteCode.code);
        IERC20(NBCoin).initialize();
        IERC20(NBCoin).transfer(targetChainLockProxy,1000000);
        assertEq(IERC20(NBCoin).balanceOf(targetChainLockProxy),1000000);

        vm.stopPrank();
        
